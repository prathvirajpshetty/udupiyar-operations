{
  "name": "udupiyar-operations-backend",
  "version": "1.0.0",
  "description": "Backend API for Udupiyar Operations Management System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "db:init": "node scripts/initDatabase.js",
    "db:migrate": "npx sequelize-cli db:migrate",
    "db:migrate:undo": "npx sequelize-cli db:migrate:undo",
    "db:seed": "npx sequelize-cli db:seed:all",
    "db:seed:undo": "npx sequelize-cli db:seed:undo:all",
    "db:reset": "npm run db:migrate:undo && npm run db:migrate && npm run db:seed",
    "db:dev:migrate": "NODE_ENV=development npx sequelize-cli db:migrate",
    "db:dev:seed": "NODE_ENV=development npx sequelize-cli db:seed:all",
    "db:dev:reset": "NODE_ENV=development npm run db:migrate:undo && NODE_ENV=development npm run db:migrate && NODE_ENV=development npm run db:seed",
    "db:prod:migrate": "NODE_ENV=production npx sequelize-cli db:migrate",
    "db:prod:seed": "NODE_ENV=production npx sequelize-cli db:seed:all"
  },
  "keywords": [
    "udupiyar",
    "operations",
    "management",
    "nodejs",
    "express",
    "sequelize",
    "postgresql"
  ],
  "author": "Prathviraj P Shetty",
  "license": "ISC",
  "dependencies": {
    "@img/sharp-libvips-linux-x64": "1.2.3",
    "@img/sharp-linux-x64": "0.34.4",
    "@vendia/serverless-express": "^4.12.6",
    "aws-sdk": "^2.1692.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.7",
    "sharp": "^0.34.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.10",
    "sequelize-cli": "^6.6.3"
  }
}
